{
  "name": "@ktranish/unit",
  "version": "1.0.0",
  "description": "A flexible React-based design system leveraging Tailwind CSS and TypeScript.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "tailwind.config.js"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./utils/getServerSideTranslations": "./dist/utils/getServerSideTranslations.js"
  },
  "scripts": {
    "build": "npx postcss src/index.css -o dist/index.css && tsc",
    "prepare": "husky",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prettier:format": "prettier --write \"**/*.{ts,tsx,js,md,mdx,css}\"",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,js,md,mdx,css}\""
  },
  "keywords": [
    "react",
    "tailwindcss",
    "design-system",
    "typescript",
    "hooks"
  ],
  "author": "Kenny Tran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ktranish/unit"
  },
  "homepage": "https://github.com/ktranish/unit#readme",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^9.1.6",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3"
  }
}
